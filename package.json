{
  "name": "auto-prospect",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=web",
    "dev:worker": "turbo run dev --filter=worker",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write .",
    "db:generate": "pnpm --filter @auto-prospect/db db:generate",
    "db:migrate": "pnpm --filter @auto-prospect/db db:migrate",
    "db:push": "pnpm --filter @auto-prospect/db db:push",
    "db:studio": "pnpm --filter @auto-prospect/db db:studio",
    "db:fresh": "pnpm --filter @auto-prospect/db db:fresh",
    "db:seed": "pnpm --filter @auto-prospect/db db:seed",
    "supabase:start": "pnpm --filter @auto-prospect/db supabase:start",
    "db:dump": "pnpm --filter @auto-prospect/db db:dump"
  },
  "devDependencies": {
    "turbo": "^2",
    "eslint": "^9",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.0",
    "typescript": "^5"
  }
}