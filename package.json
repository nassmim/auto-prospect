{
  "name": "auto-prospect",
  "private": true,
  "packageManager": "pnpm@9.15.1",
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=web",
    "dev:worker": "turbo run dev --filter=worker",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=web",
    "build:worker": "turbo run build --filter=worker",
    "lint": "turbo run lint",
    "format": "prettier --write .",
    "db:generate": "pnpm --filter @auto-prospect/db db:generate",
    "db:migrate": "pnpm --filter @auto-prospect/db db:migrate",
    "db:drop": "pnpm --filter @auto-prospect/db db:drop",
    "db:studio": "pnpm --filter @auto-prospect/db db:studio",
    "supabase:start": "pnpm --filter @auto-prospect/db supabase:start",
    "db:dump": "pnpm --filter @auto-prospect/db db:dump"
  },
  "devDependencies": {
    "tsx": "^4.21.0",
    "@dotenvx/dotenvx": "^1.52.0",
    "@types/node": "^25.2.2",
    "eslint": "^9",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.0",
    "turbo": "^2",
    "typescript": "^5"
  }
}