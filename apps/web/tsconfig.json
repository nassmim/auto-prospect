{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
, "../../packages/shared/src/config/index.ts", "../../packages/shared/src/config/account.config.ts", "../../packages/shared/src/config/error-codes.ts", "../../packages/shared/src/config/hunt.config.ts", "../../packages/shared/src/config/lead.config.ts", "../../packages/shared/src/config/message.config.ts", "../../packages/shared/src/config/payment.config.ts", "../../packages/shared/src/config/platform.config.ts"  ],
  "exclude": ["node_modules"]
}